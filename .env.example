# ===========================================
# One Bailey MVP Configuration
# ===========================================

# 업비트 API
UPBIT_ACCESS_KEY=your_upbit_access_key_here
UPBIT_SECRET_KEY=your_upbit_secret_key_here
UPBIT_SERVER_URL=https://api.upbit.com

# MongoDB (메인 데이터베이스)
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DB=onebailey
MONGODB_USER=trader
MONGODB_PASSWORD=secure_password
MONGODB_URL=mongodb://trader:secure_password@localhost:27017/onebailey?authSource=onebailey&retryWrites=true&w=majority

# InfluxDB (시계열 데이터)
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=one-bailey-admin-token-12345678901234567890
INFLUXDB_ORG=one-bailey
INFLUXDB_BUCKET=trading_data
INFLUXDB_USERNAME=admin
INFLUXDB_PASSWORD=adminpassword

# Redis (캐시 & 큐)
REDIS_URL=redis://localhost:6379/0

# API 서버
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true

# Streamlit
STREAMLIT_PORT=8501
STREAMLIT_HOST=0.0.0.0

# 로깅
LOG_LEVEL=INFO
LOG_FILE=logs/trading.log

# 트레이딩
INITIAL_BALANCE=1000000
RISK_PERCENTAGE=0.02
MAX_POSITIONS=5
DEFAULT_SYMBOL=KRW-BTC

# WebSocket 설정
WEBSOCKET_RECONNECT_DELAY=5
WEBSOCKET_PING_INTERVAL=30

# 데이터 수집 설정
DATA_COLLECTION_INTERVAL=60
CHART_DATA_DAYS=30
TECHNICAL_INDICATORS_PERIOD=14

# 보안
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
ENCRYPTION_KEY=your-encryption-key-32-characters
